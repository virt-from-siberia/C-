@model DogViewModel

<h1>Create</h1>

<hr>

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5>Create a new doc</h5>
            </div>
            <div class="card-body">
                <form  asp-controller="HelloWorld" asp-action="createDog" method="post">
                    <div class="mb-3">
                        <label class="form-label" for="">Dog Name</label>
                        <input asp-for=Name type="text" class="form-control">
                    </div>
                    <div>
                        <label class="form-label" for="">Dog Age</label>
                        <input asp-for=Age type="number" class="form-control">
                    </div>
                    <div>
                        <button class="btn btn-primary" type="submit">
                            Save
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer">

            </div>
        </div>
    </div>
</div>