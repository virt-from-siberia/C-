@page
@model PizzaASPNet.Pages.Checkout.Checkout

<h1>Your order!</h1>

@{
    var imagePath = "~/images/Pizzas/" +  (@Model.ImageTitle + ".png");
}

<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
           <img src=@imagePath class="w-100" asp-append-version="true"/>
           <p>your order for the Pizza @Model.PizzaName is ready!</p>
           <p>Total price for your order is : @Model.PizzaPrice</p>
           <p>About is : @Model.About</p>
           <br>
           <a class="btn alert-primary mt-1 mx-auto" asp-aria="" asp-page="ThankYou">Confirm order</a>
    </div>
</div>
</div>

