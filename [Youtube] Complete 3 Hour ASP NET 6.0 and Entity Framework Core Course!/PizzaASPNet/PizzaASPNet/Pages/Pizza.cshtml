@page
@model PizzaASPNet.Pages.Pizza

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our great selection for Pizza</h1>
        <h4>Chose one</h4>
        <h4>We already</h4>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" alt="" class="w-100">
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle">
                            <h3 style="text-align:left">Create you Own pizza</h3>
                            <p style="text-align:left">Make your own pizza with our PizzaMaker</p>
                            <a class="btn btn-primary" style="float:left"  asp-page="Forms/CustomPizza">TRY NOW</a>
                        </div>
                    </div>
                </div>
            </div>
             @foreach (var pizza in Model.fakePizzaDB)
             {
                 var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");
                 
                 <div class="col-4 mb-5">
                     <img src="@imagePath" class="w-100" asp-append-version="true"/>
                     <a class="btn btn-primary mt-1"
                        asp-area=""
                        asp-page="Checkout/Checkout"
                        asp-route-ImageTitle="@pizza.ImageTitle"
                        asp-route-PizzaPrice="@pizza.FinalPrice"
                        asp-route-PizzaAbout="About"
                        >
                         Get this pizza
                     </a>
                     <br/>
                 </div>
             }
        </div>
    </div>
</div>

<a class="nav-link text-dark" asp-area="" asp-page="Forms/CustomPizza">CustomPizza</a>
<a class="nav-link text-dark" asp-area="" asp-page="Checkout/Checkout">Checkout</a>